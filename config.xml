<?xml version='1.0' encoding='utf-8'?>
<widget id="com.kurohai.mobilebooru" version="0.1.5" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Mobile Booru</name>
    <description>
        A small *booru image board viewer.
    </description>
    <icon src="www/img/logo-oval-white-on-blue.png" />
    <author email="kurohai@gmail.com" href="http://kurohai.com">
        Kurohai
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-file" spec="1" />
    <plugin name="cordova-plugin-file-transfer" spec="1" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="com.admob.plugin" spec="~5.5.0" />
    <engine name="browser" spec="~4.1.0" />
    <engine name="android" spec="~5.1.0" />
</widget>
